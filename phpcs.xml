<?xml version="1.0"?>
<ruleset name="CustomRules">
    <!-- Basic configuration -->
    <description>Custom ruleset for ignoring specific sniffs.</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName"/>
    </rule>

    <!-- Exclude Missing file doc comment warning -->
    <rule ref="Squiz.Commenting.FileComment.Missing">
        <severity>0</severity>
    </rule>

    <!-- Exclude Missing doc comment warnings for classes, functions, and class members -->
    <rule ref="Squiz.Commenting.ClassComment.Missing">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.Missing">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Commenting.VariableComment.Missing">
        <severity>0</severity>
    </rule>
</ruleset>